<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:CodeNav.Models">

    <DataTemplate DataType="{x:Type models:CodeItem}">
        <Button Command="{Binding Path=ClickItemCommand}" CommandParameter="{Binding StartPoint}" 
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" BorderThickness="0" 
                HorizontalContentAlignment="Stretch"
                HorizontalAlignment="Left"
                Margin="-3">
            <StackPanel Orientation="Horizontal" Tag="{Binding StartPoint}" ToolTip="{Binding Tooltip}">
                <Frame Source="{Binding IconPath}" Margin="0,0,3,0" />
                <TextBlock>
                    <Run Text="{Binding Name}" 
                         FontFamily="{Binding FontFamily}" 
                         FontSize="{Binding FontSize}" 
                         FontStyle="{Binding FontStyle}"
                         Foreground="{Binding Foreground}" Tag="{Binding Name}" />
                    <Run Text="{Binding Type}" 
                         FontFamily="{Binding FontFamily}" 
                         FontSize="{Binding ParameterFontSize}" 
                         FontStyle="{Binding FontStyle}"
                         Foreground="DarkGray" />
                    <Run Text="{Binding Parameters}" 
                         FontFamily="{Binding FontFamily}" 
                         FontStyle="{Binding FontStyle}"
                         FontSize="{Binding ParameterFontSize}" 
                         Foreground="DarkGray" />
                </TextBlock>
            </StackPanel>
        </Button>
    </DataTemplate>

</ResourceDictionary>