<UserControl x:Class="CodeNav.CodeViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:CodeNav.Models"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>

        <DataTemplate DataType="{x:Type models:CodeFunctionItem}">
            <StackPanel Orientation="Horizontal" Tag="{Binding StartPoint}">
                <Frame Source="{Binding IconPath}" />
                <Label Content="{Binding Name}" />
                <Label Content="{Binding Type}" />
                <Label Content="{Binding Parameters}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate  DataType="{x:Type models:CodeItem}">
            <StackPanel Orientation="Horizontal" Tag="{Binding StartPoint}">
                <Frame Source="{Binding IconPath}" />
                <Label Content="{Binding Name}" />
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="CodeDocumentTemplate" >
            <Expander>
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <Frame Source="{Binding IconPath}" />
                        <Label Content="{Binding Name}"></Label>
                    </StackPanel>
                </Expander.Header>
                <ListBox ItemsSource="{Binding Members}" SelectionChanged="Selector_OnSelectionChanged"  />
            </Expander>
        </DataTemplate>
    </UserControl.Resources>

    <ListBox ItemsSource="{Binding CodeDocument}" ItemTemplate="{StaticResource CodeDocumentTemplate}" />

</UserControl>
