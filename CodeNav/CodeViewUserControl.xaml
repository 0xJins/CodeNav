<UserControl x:Class="CodeNav.CodeViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:CodeNav.Models"
             xmlns:converters="clr-namespace:CodeNav.Converters"
             xmlns:vs_shell="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.14.0"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/PlusMinusExpanderStyles.xaml" />
                <ResourceDictionary Source="Styles/ListBoxStylesItem.xaml" />
                <ResourceDictionary>
                    <converters:WidthMinusMarginConverter x:Key="WidthMinusMarginConverter" />
                </ResourceDictionary>
                <ResourceDictionary>
                    <DataTemplate DataType="{x:Type models:CodeRegionItem}">
                        <Expander IsExpanded="True" Style="{StaticResource PlusMinusExpander}" 
                                  Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Expander}}, Path=ActualWidth, 
                                  Converter={StaticResource WidthMinusMarginConverter}, ConverterParameter=15}">
                            <Expander.BorderBrush>
                                <VisualBrush>
                                    <VisualBrush.Visual>
                                        <Rectangle StrokeThickness="1"
                                            Stroke="DarkGray" 
                                            StrokeDashArray="5 3"
                                            Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualWidth}"
                                            Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualHeight}" />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Expander.BorderBrush>
                            <Expander.Header>
                                <TextBlock Text="{Binding Name}" FontSize="9" FontWeight="SemiBold" Foreground="DarkGray" />
                            </Expander.Header>
                            <ListBox ItemsSource="{Binding Members}" SelectionChanged="Selector_OnSelectionChanged" BorderThickness="0" 
                                     PreviewMouseWheel="UIElement_OnPreviewMouseWheel" Background="Transparent">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Visibility" Value="{Binding IsVisible}"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Expander>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type models:CodeClassItem}">
                        <Expander IsExpanded="True" Style="{StaticResource PlusMinusExpander}" 
                                  Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Expander}}, Path=ActualWidth, 
                                  Converter={StaticResource WidthMinusMarginConverter}, ConverterParameter=15}" BorderBrush="{Binding BorderBrush}">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Frame Source="{Binding IconPath}" Margin="0,0,3,0" />
                                    <TextBlock>
                                            <Run Text="{Binding Name}" FontSize="11" Foreground="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowTextBrushKey}}" />
                                            <Run Text="{Binding Parameters}" FontSize="10" Foreground="DarkGray" />
                                    </TextBlock>
                                </StackPanel>
                            </Expander.Header>
                            <ListBox ItemsSource="{Binding Members}" SelectionChanged="Selector_OnSelectionChanged" BorderThickness="0" 
                                     PreviewMouseWheel="UIElement_OnPreviewMouseWheel" Background="Transparent">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Visibility" Value="{Binding IsVisible}"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Expander>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type models:CodeItem}">
                        <StackPanel Orientation="Horizontal" Tag="{Binding StartPoint}" MaxWidth="{Binding RelativeSource={RelativeSource AncestorType={x:Type Expander}}, 
                            Path=ActualWidth, Converter={StaticResource WidthMinusMarginConverter}, ConverterParameter=15}" ToolTip="{Binding Tooltip}">
                            <Frame Source="{Binding IconPath}" Margin="0,0,3,0" />
                            <TextBlock>
                                <Run Text="{Binding Name}" FontSize="11" Foreground="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowTextBrushKey}}" Tag="{Binding Name}" />
                                <Run Text="{Binding Type}" FontSize="10" Foreground="DarkGray" />
                                <Run Text="{Binding Parameters}" FontSize="10" Foreground="DarkGray" />
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>

                    <DataTemplate x:Key="CodeDocumentTemplate">
                        <Expander IsExpanded="True" Style="{StaticResource PlusMinusExpander}" 
                                  Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type ScrollViewer}}, Path=ViewportWidth, 
                                  Converter={StaticResource WidthMinusMarginConverter}, ConverterParameter=6}" BorderBrush="{Binding BorderBrush}">
                            <Expander.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Frame Source="{Binding IconPath}" Margin="0,0,3,0" />
                                    <TextBlock>
                                            <Run Text="{Binding Name}" FontSize="11" Foreground="{DynamicResource {x:Static vs_shell:EnvironmentColors.ToolWindowTextBrushKey}}" />
                                            <Run Text="{Binding Parameters}" FontSize="10" Foreground="DarkGray" />
                                    </TextBlock>
                                </StackPanel>
                            </Expander.Header>
                            <ListBox ItemsSource="{Binding Members}" SelectionChanged="Selector_OnSelectionChanged" BorderThickness="0" 
                                     PreviewMouseWheel="UIElement_OnPreviewMouseWheel" Background="Transparent">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="{x:Type ListBoxItem}">
                                        <Setter Property="Visibility" Value="{Binding IsVisible}"/>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Expander>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="19" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button Click="ButtonRefresh_OnClick" ToolTip="Refresh" Margin="3,0,0,0">
            <Button.Template>
                <ControlTemplate>
                    <Frame Source="Icons/Refresh/Refresh_16x.xaml" />
                </ControlTemplate>
            </Button.Template>
        </Button>

        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Width="Auto" Margin="-3">
            <RadioButton Style="{StaticResource {x:Type ToggleButton}}" ToolTip="Sort by file order" Click="ButtonSortByFileOrder_OnClick" >
                <RadioButton.Template>
                    <ControlTemplate>
                        <Frame Source="Icons/Sort/SortingGrouping_16x.xaml"/>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton Style="{StaticResource {x:Type ToggleButton}}" ToolTip="Sort by name" Click="ButtonSortByName_OnClick">
                <RadioButton.Template>
                    <ControlTemplate>
                        <Frame Source="Icons/Sort/SortAscending_16x.xaml"/>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
        </StackPanel>

        <Button Grid.Column="2" Click="ButtonFilter_OnClick" ToolTip="Click to filter by item kind" Margin="0,0,3,0">
            <Button.Template>
                <ControlTemplate>
                    <Frame Source="Icons/Filter/Filter_16x.xaml" />
                </ControlTemplate>
            </Button.Template>
        </Button>

        <ScrollViewer x:Name="CodeScrollViewer" Grid.Row="1" Grid.ColumnSpan="3" VerticalScrollBarVisibility="Auto" Margin="0,3,0,0" Padding="0,-4,0,0">
            <ListBox ItemsSource="{Binding CodeDocument}" ItemTemplate="{StaticResource CodeDocumentTemplate}" 
                BorderThickness="0" x:Name="CodeDocumentListBox" ItemContainerStyle="{StaticResource NoMouseOverListBoxItem}" 
                Padding="0,2,0,0" PreviewMouseWheel="UIElement_OnPreviewMouseWheel" Background="Transparent" />
        </ScrollViewer>

    </Grid>

</UserControl>
